rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow create: if isOwner(userId);
      allow get, update, delete: if isOwner(userId);

      match /classes/{classId} {
        allow create, update, delete: if isOwner(userId);
        // Allow signed-in users to read class docs for global usage metrics
        allow get, list: if isOwner(userId) || isSignedIn();
      }
    }

    // Permit fetching the public usage stats document even when signed out
    match /stats/{docId} {
      allow get: if isSignedIn() || docId == "globalUsage";
      allow create, update: if docId == "globalUsage" && isSignedIn();
      allow delete, list: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
